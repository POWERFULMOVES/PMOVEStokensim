# PMOVES Firefly-iii Integration Configuration
# Copy this file to .env and fill in your values

# Required: Firefly-iii API Token
# Get this from: Firefly-iii -> Options -> Profile -> OAuth -> Personal Access Token
FIREFLY_API_TOKEN=your_firefly_api_token_here

# Optional: Firefly-iii URL (default: http://localhost:8080)
FIREFLY_URL=http://localhost:8080

# Optional: Total population for participation calculation (default: 500)
# This represents the total number of people in your community/group
# Used to calculate participation rate = active_users / total_population
TOTAL_POPULATION=500
