{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Event Envelope",
  "type": "object",
  "required": [
    "id",
    "topic",
    "ts",
    "version",
    "source",
    "payload"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "topic": {
      "type": "string"
    },
    "ts": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "correlation_id": {
      "type": "string"
    },
    "parent_id": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "actor": {
      "type": "string"
    },
    "labels": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "payload": {
      "type": "object"
    }
  },
  "additionalProperties": false
}