{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Archon Crawl Request",
  "type": "object",
  "required": ["url"],
  "properties": {
    "url": {
      "type": "string",
      "format": "uri"
    },
    "task_id": {
      "type": "string",
      "minLength": 1
    },
    "depth": {
      "type": ["integer", "null"],
      "minimum": 0
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "source_id": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
