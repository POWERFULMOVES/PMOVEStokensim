{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Archon Crawl Result",
  "type": "object",
  "required": ["task_id", "url", "status"],
  "properties": {
    "task_id": {
      "type": "string",
      "minLength": 1
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "status": {
      "type": "string",
      "minLength": 1
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "extracted_text": {
      "type": ["string", "null"]
    },
    "fragments": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
