{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "persona.publish.request.v1",
  "type": "object",
  "required": ["persona_id", "persona", "dataset"],
  "properties": {
    "persona_id": {
      "type": "string",
      "format": "uuid"
    },
    "persona": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": {"type": "string"},
        "version": {"type": "string"},
        "description": {"type": "string"}
      },
      "additionalProperties": true
    },
    "dataset": {
      "type": "object",
      "required": ["id", "queries_path"],
      "properties": {
        "id": {"type": "string"},
        "queries_path": {"type": "string"},
        "suites_path": {"type": "string"},
        "thresholds": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "min": {"type": "number"},
              "max": {"type": "number"}
            },
            "additionalProperties": false
          }
        },
        "k": {"type": "integer", "minimum": 1},
        "timeout": {"type": "number", "minimum": 0},
        "include_hits": {"type": "boolean"},
        "no_query_details": {"type": "boolean"}
      },
      "additionalProperties": true
    },
    "correlation_id": {"type": "string"}
  },
  "additionalProperties": false
}
