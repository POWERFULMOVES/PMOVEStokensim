{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Finance Transactions Ingested v1",
  "type": "object",
  "required": ["namespace", "source", "external_id", "occurred_at", "amount", "currency"],
  "additionalProperties": true,
  "properties": {
    "namespace": { "type": "string" },
    "source": { "type": "string", "enum": ["firefly"] },
    "external_id": { "type": "string" },
    "occurred_at": { "type": "string", "format": "date-time" },
    "amount": { "type": "number" },
    "currency": { "type": "string" },
    "description": { "type": ["string", "null"] },
    "category": { "type": ["string", "null"] },
    "counterparty": { "type": ["string", "null"] },
    "geometry": {
      "type": ["object", "null"],
      "additionalProperties": true,
      "properties": {
        "anchor_id": { "type": ["string", "null"] },
        "constellation_id": { "type": ["string", "null"] }
      }
    },
    "ts": { "type": ["string", "null"], "format": "date-time" }
  }
}

