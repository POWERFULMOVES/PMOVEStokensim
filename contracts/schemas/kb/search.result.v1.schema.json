{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "KB Search Result",
  "type": "object",
  "required": [
    "matches"
  ],
  "properties": {
    "matches": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "score"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "score": {
            "type": "number"
          },
          "metadata": {
            "type": "object"
          }
        }
      }
    },
    "meta": {
      "type": "object"
    }
  }
}