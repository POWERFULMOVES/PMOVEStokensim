{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Health Weekly Summary v1",
  "type": "object",
  "required": ["namespace", "period_start", "period_end", "metrics"],
  "additionalProperties": true,
  "properties": {
    "namespace": {"type": "string"},
    "period_start": {"type": "string", "format": "date"},
    "period_end": {"type": "string", "format": "date"},
    "metrics": {
      "type": "object",
      "required": ["total_workouts", "adherence_pct"],
      "properties": {
        "total_workouts": {"type": "integer", "minimum": 0},
        "adherence_pct": {"type": "number", "minimum": 0, "maximum": 100},
        "avg_load": {"type": ["number", "null"]},
        "recovery_score": {"type": ["number", "null"]},
        "avg_duration_min": {"type": ["number", "null"]}
      },
      "additionalProperties": true
    },
    "daily": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date"],
        "properties": {
          "date": {"type": "string", "format": "date"},
          "workouts": {"type": "integer", "minimum": 0},
          "load": {"type": ["number", "null"]},
          "duration_min": {"type": ["number", "null"]}
        },
        "additionalProperties": true
      }
    },
    "notes": {"type": ["string", "null"]},
    "tags": {"type": "array", "items": {"type": "string"}}
  }
}

