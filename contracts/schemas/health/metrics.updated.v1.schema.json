{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Health Metrics Updated v1",
  "type": "object",
  "required": ["namespace", "source", "observed_at", "kind", "external_id"],
  "additionalProperties": true,
  "properties": {
    "namespace": { "type": "string" },
    "source": { "type": "string", "enum": ["wger"] },
    "kind": { "type": "string", "enum": ["workout", "nutrition", "weight"] },
    "external_id": { "type": "string" },
    "observed_at": { "type": "string", "format": "date-time" },
    "summary": { "type": ["string", "null"] },
    "metrics": { "type": ["object", "null"], "additionalProperties": true },
    "geometry": {
      "type": ["object", "null"],
      "additionalProperties": true,
      "properties": {
        "anchor_id": { "type": ["string", "null"] },
        "constellation_id": { "type": ["string", "null"] }
      }
    },
    "ts": { "type": ["string", "null"], "format": "date-time" }
  }
}

