{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Ingest Transcript Ready",
  "type": "object",
  "required": [
    "media_id",
    "uri",
    "duration_s",
    "language",
    "segments"
  ],
  "properties": {
    "media_id": {
      "type": "string"
    },
    "uri": {
      "type": "string"
    },
    "duration_s": {
      "type": "number",
      "minimum": 0
    },
    "language": {
      "type": "string"
    },
    "segments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "start_s",
          "end_s",
          "text"
        ],
        "properties": {
          "start_s": {
            "type": "number"
          },
          "end_s": {
            "type": "number"
          },
          "text": {
            "type": "string"
          }
        }
      }
    },
    "meta": {
      "type": "object"
    }
  }
}