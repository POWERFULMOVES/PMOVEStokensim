{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Ingest File Added",
  "type": "object",
  "required": [
    "file_id",
    "uri",
    "kind"
  ],
  "properties": {
    "file_id": {
      "type": "string"
    },
    "uri": {
      "type": "string"
    },
    "kind": {
      "type": "string",
      "enum": [
        "audio",
        "video",
        "image",
        "document",
        "other"
      ]
    },
    "checksum": {
      "type": "string"
    },
    "size_bytes": {
      "type": "integer"
    },
    "meta": {
      "type": "object"
    }
  }
}